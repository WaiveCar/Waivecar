root: true

env:
    node: true

rules:
    no-console: 0
    indent: [0, 2]
    camelcase: [1, { properties: "never" }]
    comma-style: [2, "last"]
    comma-dangle: 0
    consistent-return: 2
    curly: [0]
    eol-last: 2
    eqeqeq: [2, "smart"]
    func-style: [0, "declaration"]
    new-cap: 0
    new-parens: 2
    no-alert: 2
    no-array-constructor: 2
    no-caller: 2
    no-delete-var: 2
    no-eval: 2
    no-extend-native: 2
    no-extra-bind: 2
    no-fallthrough: 2
    no-implied-eval: 2
    no-invalid-this: 0
    no-iterator: 2
    no-label-var: 2
    no-labels: 2
    no-lone-blocks: 2
    no-loop-func: 2
    no-mixed-spaces-and-tabs: [2, false]
    no-multi-spaces: 2
    no-multi-str: 2
    no-native-reassign: 2
    no-nested-ternary: 2
    no-new: 2
    no-new-func: 2
    no-new-object: 2
    no-new-wrappers: 2
    no-octal: 2
    no-octal-escape: 2
    no-process-exit: 2
    no-proto: 2
    no-redeclare: 2
    no-return-assign: 2
    no-script-url: 2
    no-sequences: 2
    no-shadow: 2
    no-shadow-restricted-names: 2
    no-spaced-func: 2
    no-trailing-spaces: 0
    no-undef-init: 2
    no-undefined: 2
    no-underscore-dangle: 0
    no-unused-expressions: 2
    no-with: 2
    radix: 2
    semi-spacing: [2, {before: false, after: true}]
    space-after-keywords: [0, "never"]
    space-before-blocks: 0
    space-before-function-paren: [0, "never"]
    spaced-comment: [0, "always", { exceptions: ["-"]}]
    strict: [2, "global"]
    valid-jsdoc: [1, { prefer: { "return": "returns"}}]
    yoda: 0
